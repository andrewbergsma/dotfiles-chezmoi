{{- /* Get host-specific theme or fall back to default */ -}}
{{- $hostLabel := .hostLabel | default "unknown" -}}
{{- $host := index .hosts $hostLabel | default .default -}}

# ~/.config/tmux/theme.conf
# ============================================================================
# HOST-SPECIFIC THEME COLORS
# Host: {{ $host.label }} | Theme: {{ $host.theme }}
# Generated by chezmoi - do not edit directly
# ============================================================================

# Status bar colors
set -g status-style 'bg=default fg={{ $host.fg }}'

# Window status (inactive)
setw -g window-status-format '#[fg={{ $host.muted }}]#I:#W#F'

# Window status (active) - uses host primary color
setw -g window-status-current-format '#[fg={{ $host.primary }},bold]#I:#W#F'

# Pane borders - Active pane gets bright primary color
set -g pane-border-style 'fg={{ $host.muted }}'
set -g pane-active-border-style 'fg={{ $host.primary }},bold'

# Pane styling - Dim unfocused panes with darker background (affects all content)
set -g window-style 'bg=#1a1d2a'
set -g window-active-style 'bg={{ $host.bg_dark }}'

# Message styling
set -g message-style 'fg={{ $host.fg_bright }} bg={{ $host.bg }} bold'
set -g message-command-style 'fg={{ $host.warning }} bg={{ $host.bg }}'

# Copy mode
setw -g mode-style 'fg={{ $host.bg }} bg={{ $host.secondary }}'

# Clock
setw -g clock-mode-colour '{{ $host.primary }}'

# Pane number display
set -g display-panes-active-colour '{{ $host.primary }}'
set -g display-panes-colour '{{ $host.muted }}'

# tmux-floax colors (host-specific)
set -g @floax-border-color '{{ $host.primary }}'
set -g @floax-text-color '{{ $host.secondary }}'

# tmux-thumbs (use host accent color)
set -g @thumbs-hint-fg-color '{{ $host.bg }}'
set -g @thumbs-hint-bg-color '{{ $host.warning }}'

# fzf-url opener (OS-specific)
{{ if eq $host.os "macos" -}}
set -g @fzf-url-open "open"
set -g @thumbs-command 'echo -n {} | pbcopy'
set -g @thumbs-upcase-command 'open {}'
{{ else -}}
set -g @fzf-url-open "xdg-open"
set -g @thumbs-command 'echo -n {} | xclip -selection clipboard'
set -g @thumbs-upcase-command 'xdg-open {}'
{{ end -}}
