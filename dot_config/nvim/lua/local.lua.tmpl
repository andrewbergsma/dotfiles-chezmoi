{{- /* Get host-specific data */ -}}
{{- $hostLabel := .hostLabel | default "unknown" -}}
{{- $host := index .hosts $hostLabel | default .default -}}

-- ~/.config/nvim/lua/local.lua
-- ============================================================================
-- HOST-SPECIFIC NEOVIM CONFIGURATION
-- Host: {{ $host.label }} | Theme: {{ $host.theme }}
-- Generated by chezmoi - do not edit directly
-- ============================================================================

-- Host identity (available to Lua scripts)
vim.g.dot_host = "{{ $host.label }}"
vim.g.dot_theme = "{{ $host.theme }}"
vim.g.dot_os = "{{ $host.os }}"

-- ============================================================================
-- OS-SPECIFIC SETTINGS
-- ============================================================================
{{ if eq $host.os "macos" -}}
-- macOS-specific settings
-- Use system clipboard
vim.opt.clipboard = "unnamedplus"

-- Python provider (Homebrew)
vim.g.python3_host_prog = "/opt/homebrew/bin/python3"
{{ else if eq $host.os "arch" -}}
-- Arch Linux-specific settings
vim.opt.clipboard = "unnamedplus"

-- Python provider
vim.g.python3_host_prog = "/usr/bin/python3"
{{ else if eq $host.os "ubuntu" -}}
-- Ubuntu-specific settings
vim.opt.clipboard = "unnamedplus"

-- Python provider
vim.g.python3_host_prog = "/usr/bin/python3"
{{ end -}}

